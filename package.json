{
  "name": "liget",
  "description": "Utility projet providing shortcut functions for HOFs",
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuKpL/liget.git"
  },
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "Higher-Order functions",
    "typescript"
  ],
  "license": "MIT",
  "scripts": {
    "build:clean": "rimraf lib",
    "build:compile": "sh scripts/build.sh",
    "build:typecheck": "run-p typecheck:*",
    "build": "run-s build:typecheck build:clean build:compile",
    "dev:build": "sh scripts/build.dev.sh",
    "dev:run": "wait-on lib/index.js && nodemon lib",
    "dev:clean": "rimraf lib",
    "dev": "sh scripts/dev.sh",
    "start": "node lib",
    "test": "jest --colors --coverage",
    "tdd": "jest --colors --watchAll",
    "typecheck:lint": "sh scripts/lint.sh",
    "typecheck:ts": "tsc"
  },
  "browserslist": "> 0.25%, not dead",
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "run-s test"
    }
  },
  "jest-junit": {
    "outputDirectory": "test-results"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-cucumber": "^3.0.0",
    "jest-junit": "^11.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7",
    "wait-on": "^5.2.0"
  }
}
